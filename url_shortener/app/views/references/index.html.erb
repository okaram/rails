<h1>Your references</h1>

<table class="table table-hover">
  <tr>
    <th>id</th>
    <th>url</th>
    <th>visit count</th>
		<th>Short url</th>
    <th></th>
    <th></th>
  </tr>

<% @references.each do |reference| %>
  <tr>
	<td><%= reference.id %></td>
	<td><%= reference.url %></td>
	<td><%= reference.visit_count %></td>
	<td><%= root_url+'r/'+reference.id.to_s %></td>
  <td><%= link_to 'Edit', edit_reference_path(reference) %></td>
  <td><%= link_to 'Destroy', reference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

